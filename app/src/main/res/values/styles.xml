<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/main_gray</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/main_gray</item>
    </style>

    <style name="RegularFontStyle">
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>

    <style name="BoldFontStyle">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>
</resources>