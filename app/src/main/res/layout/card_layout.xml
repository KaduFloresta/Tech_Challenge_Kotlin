<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="228dp"
    android:layout_height="176sp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/border_card"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textName"
        style="@style/BoldFontStyle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text=""
        android:textColor="@color/main_gray"
        app:autoSizeMaxTextSize="31sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="0.1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/main_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <TextView
            android:id="@+id/textEmailTitle"
            style="@style/BoldFontStyle"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:text="@string/text_email_title"
            android:textColor="@color/main_gray"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="0.1sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/textEmail"
            style="@style/RegularFontStyle"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/main_gray"
            android:textSize="18sp"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="0.1sp"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAgeTitle"
                style="@style/BoldFontStyle"
                android:layout_width="50dp"
                android:layout_height="16dp"
                android:layout_marginEnd="5dp"
                android:text="@string/text_age_title"
                android:textColor="@color/main_gray"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="0.1sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textIdTitle"
                style="@style/BoldFontStyle"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:text="@string/text_id_title"
                android:textColor="@color/main_gray"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="0.1sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <TextView
                android:id="@+id/textAge"
                style="@style/RegularFontStyle"
                android:layout_width="50dp"
                android:layout_height="21dp"
                android:layout_marginEnd="0dp"
                android:text=""
                android:textColor="@color/main_gray"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="0.1sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textId"
                style="@style/RegularFontStyle"
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/main_gray"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="0.1sp"
                app:autoSizeTextType="uniform" />

            <ImageView
                android:id="@+id/iconUpdate"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/ic_edit_description"
                android:src="@drawable/ic_edit"
                app:tint="@color/main_gray" />

            <ImageView
                android:id="@+id/iconDelete"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:contentDescription="@string/ic_delete_description"
                android:src="@drawable/ic_delete"
                app:tint="@color/main_gray" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>